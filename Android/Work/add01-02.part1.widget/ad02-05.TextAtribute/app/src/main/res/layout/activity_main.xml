<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.textatribute.MainActivity">
    
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textSize 속성"/>
    
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textColor 속성"/>
    
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textStyle 속성"
        />
    
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="typeface 속성"/>
    
    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleLine 속성"/>
    
    <TextView
        android:id="@+id/textView연습1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"/>
    
    <TextView
        android:id="@+id/textView연습2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"/>
    
    <TextView
        android:id="@+id/textView연습3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"/>
    
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="속성 설정"/>
</LinearLayout>
